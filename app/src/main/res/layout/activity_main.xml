<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbebcd"
    tools:context="com.example.lam7150.collegebinder.MainActivity">

    <Button
        android:id="@+id/button_send"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/helveticabold"
        android:onClick="sendMessage"
        android:text="@string/button_search"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@android:color/black"
        tools:text="Get Started" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helveticabold"
        android:text="@string/collegebinder"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/intro_text"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/eb_garamond"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/intro" />

    <TextView
        android:id="@+id/shoutouts"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:fontFamily="@font/eb_garamond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="483dp"
        tools:text="Inspiration for UI theme and styling comes from Virgil Abloh.
Web API brought to you and part by the US Department of Education." />


</android.support.constraint.ConstraintLayout>
